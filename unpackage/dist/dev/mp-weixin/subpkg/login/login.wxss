.modal-box {
  display: flex;
  flex-direction: column;
}
.modal-box .tips {
  width: 80%;
  text-align: left;
  margin: 6% 10%;
  margin-top: 48rpx;
  line-height: 1.75;
}
.modal-box .register {
  color: #00DD00;
  border-style: none;
  background: #fff;
}
.wx-auth-container {
  width: 100%;
  margin-top: 20%;
}
.wx-auth-container .box {
  margin: 0rpx 30rpx;
  /* 文字提示*/
}
.wx-auth-container .box .logo-info {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  flex-direction: row;
  align-items: flex-start;
  padding: 20rpx;
  font-weight: bold;
}
.wx-auth-container .box .logo-info .title {
  display: inline-block;
  font-size: 50rpx;
  color: #333;
}
.wx-auth-container .box .small-tips {
  width: 94%;
  padding: 20rpx;
  font-size: 24rpx;
  margin: 0 0 20rpx;
  color: #999;
}
.wx-auth-container .box .btns {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: center;
}
.wx-auth-container .box .btns .btn-auth {
  width: 92%;
  margin: 0 auto 40rpx;
  border-radius: 100px;
}
.wx-auth-container .box .btns .btn-callback {
  text-align: center;
  font-size: 30rpx;
  background: #ededed;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 100px;
  width: 92%;
  margin: 0 auto;
}

