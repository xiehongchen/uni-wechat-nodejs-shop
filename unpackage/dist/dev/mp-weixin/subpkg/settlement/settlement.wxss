.pay-box {
  background-color: #fff;
  border-radius: 10px;
  margin: 10px 2px;
  padding: 15px 10px;
}
.pay-box .zhifubao {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 5px 0px;
}
.pay-box .zhifubao .zhifubao-text {
  width: 100%;
  margin-left: 20px;
  line-height: 30px;
}
.pay-box .weixin {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 5px 0px;
}
.pay-box .weixin .weixin-text {
  width: 100%;
  margin-left: 20px;
  line-height: 30px;
}
.my-settle-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 5px;
  font-size: 18px;
}
.my-settle-container .amount-box {
  display: flex;
  justify-content: center;
  align-items: center;
}
.my-settle-container .amount-box .text {
  font-size: 13px;
  color: #888586;
  margin-right: 20px;
  margin-left: 5px;
}
.my-settle-container .amount-box .amount {
  color: #f63c4c;
}
.my-settle-container .btn-settle {
  height: 40px;
  min-width: 100px;
  background-color: #f6a93c;
  color: white;
  border-radius: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10px;
  margin-right: 10px;
}

