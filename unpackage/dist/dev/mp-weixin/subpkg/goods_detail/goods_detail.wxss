.goods-detail-container {
  padding-bottom: 50px;
}
.goods-detail-container swiper {
  height: 750rpx;
}
.goods-detail-container swiper image {
  width: 100%;
  height: 100%;
}
.goods-detail-container .goods-info-box {
  background-color: white;
  width: 100%;
  padding: 5px 2px;
  border-radius: 10px;
  margin: 10px 0px;
}
.goods-detail-container .goods-info-box .goods-info-header {
  display: flex;
  justify-content: space-between;
}
.goods-detail-container .goods-info-box .goods-info-header .favi {
  font-size: 10px;
  display: flex;
  flex-direction: column;
  margin-right: 30px;
  border-left: 1px solid #efefef;
  color: gray;
}
.goods-detail-container .goods-info-box .goods-info-header .price {
  color: #c00000;
  font-size: 18px;
  margin: 10px 0;
}
.goods-detail-container .goods-info-box .goods-info-body {
  display: flex;
  justify-content: space-between;
}
.goods-detail-container .goods-info-box .goods-info-body .goods-info .goods-name {
  font-size: 20px;
  padding-right: 10px;
}
.goods-detail-container .goods-info-box .goods-info-body .goods-info .goods_introduce {
  font-size: 10px;
  color: #919596;
}
.goods-detail-container .goods-detail-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10px;
  background-color: white;
}
.goods-detail-container .goods-detail-box .goods-detail-item {
  font-size: 12px;
  margin: 10px 0px;
  border-bottom: 2px solid #122FA7;
}
.goods-detail-container .goods_nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

