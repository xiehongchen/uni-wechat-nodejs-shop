.cart-container {
  padding-bottom: 50px;
}
.cart-container .cart-title {
  height: 40px;
  display: flex;
  align-items: center;
  font-size: 14px;
  padding-left: 5px;
  border-bottom: 1px solid #efefef;
}
.cart-container .cart-title .cart-title-text {
  margin-left: 10px;
}
.cart-container .goods-item {
  display: flex;
  box-sizing: border-box;
  margin: 8px 2px;
  background-color: white;
  border-radius: 10px;
}
.cart-container .text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 600rpx;
  height: 400rpx;
  border-radius: 40rpx;
  background-color: #f9f9f9;
}
.cart-container .text .text-font {
  font-size: 40rpx;
}
.cart-container .text .text-button {
  margin-top: 50rpx;
  height: 60rpx;
  width: 220rpx;
  border-radius: 28rpx;
  text-align: center;
  background-color: #37a7c7;
}
.cart-container .my-settle-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 5px;
  font-size: 14px;
}
.cart-container .my-settle-container .radio {
  display: flex;
  align-items: center;
}
.cart-container .my-settle-container .amount {
  color: #c00000;
}
.cart-container .my-settle-container .btn-settle {
  height: 50px;
  min-width: 100px;
  background-color: #c00000;
  color: white;
  line-height: 50px;
  text-align: center;
  padding: 0 10px;
  border-radius: 20px;
}

